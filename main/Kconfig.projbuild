menu "Example Configuration"

    orsource "$IDF_PATH/examples/common_components/env_caps/$IDF_TARGET/Kconfig.env_caps"

    config EXAMPLE_WIFI_CONFIGURATION_MANUAL
        bool
        default y

    config EXAMPLE_WIRED_INTERFACE_IS_ETHERNET
        bool
        default y

    config EXAMPLE_RECONFIGURE_BUTTON
        int "Button for switching to reconfigure mode"
        range ENV_GPIO_RANGE_MIN ENV_GPIO_IN_RANGE_MAX
        default 2
        help
            The button on this GPIO is used to reset the board to
            the reconfiguration mode, i.e. to restart provisioning
            or manual configuration of Wi-Fi settings (ssid, password)

    config EXAMPLE_MODIFY_DHCP_MESSAGES
        bool "Modify DHCP messages"
        default y
        help
            This is needed if the client uses 61 option and the DHCP server applies strict rules
            on assigning addresses.

    config EXAMPLE_ETHERNET_USE_PROMISCUOUS
        bool "Enable promiscuous mode on Ethernet interface"
        default n
        help
            Enable promiscuous mode on the Ethernet interface.

endmenu

menu "C6 OTA Configuration"

    config C6_OTA_ENABLED
        bool "Enable C6 OTA upgrade mode"
        default y
        help
            Enable OTA upgrade functionality for ESP32-C6 firmware.
            When enabled, the device will check C6 firmware version on startup
            and enter OTA mode if the version is outdated or C6 is unresponsive.

    config C6_OTA_MIN_VERSION_MAJOR
        int "Minimum C6 firmware version (major)"
        depends on C6_OTA_ENABLED
        default 1
        range 0 255
        help
            Minimum required major version of C6 firmware.

    config C6_OTA_MIN_VERSION_MINOR
        int "Minimum C6 firmware version (minor)"
        depends on C6_OTA_ENABLED
        default 2
        range 0 255
        help
            Minimum required minor version of C6 firmware.

    config C6_OTA_MIN_VERSION_PATCH
        int "Minimum C6 firmware version (patch)"
        depends on C6_OTA_ENABLED
        default 0
        range 0 255
        help
            Minimum required patch version of C6 firmware.

    config C6_OTA_WEBSERVER_PORT
        int "OTA web server port"
        depends on C6_OTA_ENABLED
        default 80
        range 1 65535
        help
            Port for the OTA web server.

    config C6_OTA_NETWORK_IP
        string "OTA mode Ethernet IP address"
        depends on C6_OTA_ENABLED
        default "192.168.100.1"
        help
            IP address for P4 Ethernet interface in OTA mode.

    config C6_OTA_NETWORK_NETMASK
        string "OTA mode Ethernet netmask"
        depends on C6_OTA_ENABLED
        default "255.255.255.0"
        help
            Netmask for P4 Ethernet interface in OTA mode.

    config C6_OTA_SDIO_READY_TIMEOUT_MS
        int "SDIO ready timeout (ms)"
        depends on C6_OTA_ENABLED
        default 15000
        range 1000 60000
        help
            Timeout for waiting for C6 SDIO to be ready.

    config C6_OTA_VERSION_QUERY_TIMEOUT_MS
        int "Version query timeout (ms)"
        depends on C6_OTA_ENABLED
        default 10000
        range 1000 30000
        help
            Timeout for querying C6 firmware version.

    config C6_OTA_BUFFER_SIZE
        int "OTA buffer size in PSRAM (bytes)"
        depends on C6_OTA_ENABLED
        default 262144
        range 65536 4194304
        help
            Size of PSRAM buffer for firmware upload (256KB default).

endmenu
